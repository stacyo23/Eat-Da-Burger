<h1>Eat-Da-Burger!</h1>

<div class="burgers">
    
            <h2>Available burgers:</h2>
        {{!-- unordered list pulls each burger name unless already devoured from the burgers partial --}}
         <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{>burgers/burgers devoured=false}}
            {{/unless}}
            {{/each}}
        </ul>
</div>
        {{!-- image placed --}}
        <div class="img">
            <img src ="assets/img/burger.png">
        </div>

        <div class="devoured">
            <h2>Devoured burgers:</h2>
            {{!-- unordered list to show each burger where devoured =true --}}
             <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{>burgers/burgers devoured=true}}
            {{/if}}
            {{/each}}
            </ul>
        </div>
       
       {{!-- form to accept new burger name --}}
    <div class="create">
        <h2>Add a burger:</h2>
        <form class="create-form">
            <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="name">
            <button method="POST" type="submit">Add burger</button>
            </div>
        </form>
    </div>




